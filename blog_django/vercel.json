{
  "version": 2,
  "buildCommand": "python3 -m pip install -r requirements.txt && python3 manage.py collectstatic --noinput",
  "installCommand": "python3 -m pip install -r requirements.txt",
  "env": {
    "DJANGO_SETTINGS_MODULE": "django_blog.settings"
  },
  "functions": {
    "api/index.py": {
      "runtime": "python3.11"
    }
  },
  "routes": [
    { "src": "/(.*)", "dest": "api/index.py" }
  ]
}
